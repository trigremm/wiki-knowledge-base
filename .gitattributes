# Установка LF по умолчанию для всех текстовых файлов
* text=auto eol=lf

# Python
*.py text diff=python eol=lf
*.pyw text diff=python eol=lf
*.pyx text diff=python eol=lf
*.pxd text diff=python eol=lf
requirements.txt text eol=lf
runtime.txt text eol=lf
Pipfile text eol=lf
Pipfile.lock text -diff eol=lf
*.toml text eol=lf
pyproject.toml text eol=lf
poetry.lock text -diff eol=lf

# Web
*.js text eol=lf
*.jsx text eol=lf linguist-language=JavaScript
*.ts text eol=lf
*.tsx text eol=lf linguist-language=TypeScript
*.json text eol=lf
*.html text diff=html eol=lf
*.css text diff=css eol=lf
*.scss text diff=css eol=lf
package.json text eol=lf
package-lock.json text -diff eol=lf
yarn.lock text -diff eol=lf

# Документация и конфигурация
*.md text diff=markdown linguist-documentation=true eol=lf
*.txt text eol=lf
*.rst text eol=lf
*.ini text eol=lf
.env.example text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
LICENSE text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf
.dockerignore text eol=lf

# Shell скрипты
*.sh text eol=lf
*.bash text eol=lf
gradlew text eol=lf
mvnw text eol=lf

# Windows-специфичные файлы (CRLF)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.psm1 text eol=crlf
*.reg text eol=crlf
*.sln text eol=crlf
*.vbs text eol=crlf

# Бинарные файлы
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.db binary
*.sqlite binary
*.pickle binary
*.pyc binary
*.pyo binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary

# База данных и кэш
*.db binary
*.sqlite binary
*.pickle binary

# Специальные настройки языков
*.sql text linguist-language=SQL eol=lf

# Исключения из статистики
generated/* linguist-generated=true
build/* linguist-generated=true
dist/* linguist-generated=true
docs/* linguist-documentation=true
vendor/* linguist-vendored=true

# Игнорирование при экспорте
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
tests export-ignore
docs export-ignore

# Дополнительные настройки слияния
*.lock -diff